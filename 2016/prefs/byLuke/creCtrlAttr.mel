string $sels[]=`ls -sl`;
$switch=addLimFolatAttr($sels[0],"switch",1,0);

//作switch參數 只能對單一做
proc string addLimFolatAttr(string $ctrl,string $nm,float $max,float $min){
    string $fn=$ctrl+"."+$nm;
    addAttr -ln $nm -nn $nm -at double  -min $min -max $max -dv 0 $ctrl;
    setAttr -e-keyable true ($ctrl+"."+$nm);
    return $fn;
    }

