exportAniFBXToo2();
global proc exportAniFBXToo2(){
    string $window;
    string $exportAniFBXTool;
    global int $swSBFL=1;    
       if (`window -exists exportAniFBXTool`)
                deleteUI -window exportAniFBXTool;
        $window=`window -title "exportAniFBXTool" -w 500 -rtf 1 -s 1 exportAniFBXTool`;
        columnLayout -columnAttach "both" 5 -h 50 -rowSpacing 5 -columnWidth 500;        
            frameLayout -label "FBX direction" ;   
                flowLayout -cs 30;  
                    radioCollection radioCollectionFBXdir;           
                    radioButton -label "Local" radioButtonLocalFBXdir;
                    radioButton -label "Replace  */Maya/*  To  */fbx/*  " radioButtonReplaceFBXdir;
                    radioCollection -edit -select radioButtonReplaceFBXdir radioCollectionFBXdir;
                setParent ..;setParent ..; 
            frameLayout -label "Export Method" ;                   
                flowLayout -cs 25; 
                    radioCollection radioCollectionExportMethod;           
                    radioButton -label "Single" -onc "$swSBFL=swSingleBatchFrameLayoutForExprotAniFBX($swSBFL)" radioButtonSingleExportMethod;
                    radioButton -label "Batch" -onc "$swSBFL=swSingleBatchFrameLayoutForExprotAniFBX($swSBFL)"  radioButtonBatchExportMethod;
                setParent ..;            
            setParent ..;          
        setParent ..;   
        columnLayout -columnAttach "both" 5 -h 50 -rowSpacing 5 -columnWidth 500;
            frameLayout -label "Single Export Ani FBX" -cll 1 -cl 0 frameLayoutSEAF;         
                rowColumnLayout -numberOfColumns 4-columnWidth 1 60 -columnWidth 2 80 -columnWidth 3 50 -columnWidth 4 150;
                    separator -style "none"; 
                    button -label "Export" -bgc 0.3 0.5 0.2 -c "singelExportAniFBXHub();";
                    separator -style "none"; 
                    checkBox -label "reOpen Origin Mb" checkBoxSingleFile;
                setParent ..;      			   
            setParent ..;  
        setParent ..;          
        columnLayout -columnAttach "both" 5 -h 800 -rowSpacing 5 -columnWidth 500;                                   
            frameLayout -label "Batch Export Ani FBX" -h 700 -cll 1 -cl 1 frameLayoutBEAF;
                paneLayout -configuration "vertical2" -h 600 -en 1 ;
                    textScrollList -w 420 -ams 1 textScrollListBatchFile;
                    //setParent ..; 
                    columnLayout cl;
                        button -l "Add" -c "$sn=`file -q -sn`; addItemForExprotAniFBX($sn);"; 
                        button -l "Remove" -c "deleteItemForExprotAniFBX();"; 
                setParent ..;
            setParent ..;
     
   
            rowColumnLayout -numberOfColumns 3-columnWidth 1 60 -columnWidth 2 80 -columnWidth 3 100;
                separator -style "none";
                button -bgc 0.3 0.5 0.2 -l "Batch Export" -c "batchExportAniFBXHub();"; 
                setParent ..; 
                progressBar -maxValue 100 -width 300 progressBarBatchExport;
                separator -style "none";            
        setParent ..; setParent ..;          
        radioCollection -e -select radioButtonSingleExportMethod radioCollectionExportMethod;                      
        showWindow exportAniFBXTool;
        }